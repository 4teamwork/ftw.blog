<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="de"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="ftw.blog">

<head>
    <metal:block fill-slot="top_slot"
                 tal:define="dummy python:request.set('layoutClass', 'two-column-left')" />
</head>

<body>

<div metal:fill-slot="main" class="blogView">
    <metal:main-macro define-macro="main">
    
    <div tal:replace="structure provider:plone.abovecontenttitle" />


    <h1 class="documentFirstHeading">
      <tal:title replace="context/Title" />
    </h1>
    <div tal:replace="structure provider:plone.belowcontenttitle" />
    
     <div id="blogColumns blogItem" class="clearfix">
        <div class="leftColumn">
           <span class="documentByLine"
                 tal:define="item_creator here/Creator;
                             item_created here/CreationDate;
                             item_categories here/getCategoryUids;">
               <span i18n:translate="label_blog_byline">
                    <tal:name tal:condition="item_creator"
                       tal:define="author python:mtool.getMemberInfo(item_creator)">
                         <span tal:content="python:author and author['fullname'] or item_creator"
                               tal:omit-tag="not:author"
                               i18n:name="author">
                           Bob Dobalina
                         </span>
                    </tal:name>
                       am 
                    <span class="dateCreated"
						  tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;"
                          tal:content="python:toLocalizedTime(item_created, long_format=1)"
                          i18n:name="created">from date</span> in 
                    
               </span>
                    <tal:rep repeat="cat_uid item_categories">
                       <a tal:define="cat_brains  python:context.portal_catalog({'UID':cat_uid});
                                      brain       python:len(cat_brains) and cat_brains[0] or False;
                                      brain_title brain/Title | nothing;
                                      brain_url   brain/getURL | nothing"
                          tal:condition="brain" 
                          tal:attributes="href string:./blog_view?getCategoryUids=${cat_uid}"
                          class="categories" 
                          href="#" 
                          tal:content="brain_title" /><span tal:condition="not:repeat/cat_uid/end" tal:replace="string:, " />
                       
                    </tal:rep>
           </span>
            
            <div class="#" id="#"
				            tal:define="slclass view/getCSSClass;"
				            tal:attributes="id here/id;
								            class string:simplelayout-block-wrapper ${slclass};">

	            <div class="sl-img-wrapper" tal:condition="here/getImage|nothing">
	
					            <a  
						            tal:attributes="
										            rel string:gb_page_fs[];
										            title context/Title;
										            href string:${context/absolute_url}/image
										            "
										            tal:omit-tag="not: here/getImageClickable|nothing"
					            >
						            <img tal:replace="structure view/getImageTag" />
					            </a>
	            </div>
	            <div class="sl-text-wrapper" tal:content="structure here/getText | nothing"></div>
            </div>
            
        <br style="clear:both;">
            
            

        <tal:def define="item_tags here/tags">
            <div class="tags" metal:define-macro="taglisting">
             <tal:rep repeat="tag item_tags">
                <a tal:define="tag_url string: ./blog_view?tags=${tag}"
                   tal:condition="tag"
                   tal:attributes="href tag_url"
                   class="TagsItem"
                   href="#"
                   tal:content="tag" /><span tal:condition="not:repeat/tag/end" tal:replace="string:, " />
             </tal:rep>
            </div>
        </tal:def>
        
     <tal:block replace="structure provider:blog.belowcontent" />
     </div>
     <div class="rightColumn">
         <tal:block replace="structure provider:blog.portlets" />
     </div>
     
     
  </metal:main-macro>
</div>

</body>
</html>
