<?xml version="1.0"?>
<object name="SlBlogEntry"
   meta_type="Factory-based Type Information with dynamic views"
   i18n:domain="ftw.blog" xmlns:i18n="http://xml.zope.org/namespaces/i18n">
  <property name="title" i18n:translate="">SlBlogEntry</property>
  <property name="description"
    i18n:translate=""></property>
  <property name="content_meta_type">SlBlogEntry</property>
  <property name="content_icon">document_icon.gif</property>
  <property name="product">ftw.blog</property>
  <property name="factory">addSlBlogEntry</property>
  <property name="immediate_view">atct_edit</property>
  <property name="global_allow">False</property>
  <property name="filter_content_types">True</property>
  <property name="allowed_content_types">
    <element value="Image"/>
    <element value="TextBlock"/>
    <element value="File"/>
    <element value="ListingBlock"/>
    <element value="AddressBlock"/>
  </property>
  <property name="allow_discussion">True</property>
  <property name="default_view">simplelayout_blog_entry_view</property>
  <property name="view_methods">
    <element value="simplelayout_blog_entry_view" />
  </property>
  <alias from="(Default)" to="(dynamic view)" />
  <alias from="edit" to="atct_edit" />
  <alias from="sharing" to="@@sharing" />
  <alias from="view" to="(selected layout)" />
  <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${folder_url}/" visible="False">
    <permission value="View" />
  </action>
  <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True">
    <permission value="Modify portal content" />
  </action>
</object>
