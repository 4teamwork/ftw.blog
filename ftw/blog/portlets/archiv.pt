<div class="portletWrapper" i18n:domain="ftw.blog">
<dl class="portlet portletBlogCategory clearfix">

    <dt class="portletHeader">
        <span i18n:translate="">
           Archiv
        </span>
    </dt>

    <dd class="portletItem">
        <ul>
            <li tal:repeat="a view/archivlist">
                <a tal:attributes="href a/url;
                                   title a/title" 
                   tal:content="python: '%s (%s)' % (a['title'], a['number'])" i18n:translate=""/>
             </li>
         </ul>
    </dd>

</dl>

</div>
