<dl class="portlet portlettest_portlet"
    i18n:domain="izug.blog">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span>
           Kategorien
        </span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem lastItem">
        <ul class="navTree navTreeLevel0">
            <li class="navTreeItem visualNoMarker"
                    tal:repeat="node view/getCatgeories">
                <div>
                    <a tal:attributes="href node/getURL;
                                        title node/Description;">
                        <img src="" alt="" title="" border="0"
                            tal:attributes="src node/icon" />
                        <span tal:content="node/Title" />
                        (<tal:block tal:replace="python:view.getEntryAmountByCategoryBrain(node)" />)
                    </a>
                </div>
            </li>
        </ul>
    </dd>

</dl>
