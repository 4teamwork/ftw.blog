<div class="portletWrapper" i18n:domain="izug.blog"
           tal:define="tags view/tagclouds">
<dl class="portlet portletTagcloud clearfix">

    <dt class="portletHeader">
        <span i18n:translate="">
           TagCloud
        </span>
    </dt>

    <dd tal:repeat="tag tags" class="portletItem">
      <a tal:attributes="style string:font-size:${tag/fontsize}em;
                         href string:${view/blogroot}/view?tags=${tag/title}"
         tal:content="tag/title" />
    </dd>

</dl>

</div>
