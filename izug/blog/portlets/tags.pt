<tal:block i18n:domain="izug.blog"
           define="tags view/tagclouds">
<dl class="portlet portletBlogCategory">

    <dt class="portletHeader">
        <span class="portletTopLeft"/>
        <span i18n:translate="">
           TagCloud
        </span>
        <span class="portletTopRight"/>
    </dt>

    <dd class="portletItem">
    
        <tal:rep repeat="tag tags">
            <a tal:attributes="style string:font-size:${tag/fontsize}em;
                                href string:./blog_view?getTags=${tag/title}"
                  tal:content="tag/title" />
        </tal:rep>
    </dd>

</dl>

</tal:block>
