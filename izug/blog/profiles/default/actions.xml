<?xml version="1.0"?>
<object xmlns:i18n="http://xml.zope.org/namespaces/i18n" name="portal_actions" meta_type="Plone Actions Tool">
	<object name="object_blog_actions" meta_type="CMF Action Category">
		<property name="title"/>
		<object name="togglesledit" meta_type="CMF Action" i18n:domain="izug">
			<property name="title" i18n:translate="">Toggle Editmode</property>
			<property name="description" i18n:translate=""/>
			<property name="url_expr">string:javascript:sl.toggleEditMode()</property>
			<property name="icon_expr">string:edit.gif</property>
			<property name="available_expr">python: object.portal_type in here.portal_properties.izug_simplelayout_properties.types_use_simplelayout</property>
			<property name="permissions">
				<element value="Add portal content"/>
			</property>
			<property name="visible">False</property>
		</object>
		<object name="new_entry" meta_type="CMF Action" i18n:domain="izug">
			<property name="title" i18n:translate="">New Blog Entry</property>
			<property name="description" i18n:translate=""/>
			<property name="url_expr">nocall:here/@@create_blog_entry_path/URL</property>
			<property name="icon_expr"/>
			<property name="available_expr"/>
		</object>
		<object name="new_block_entry" meta_type="CMF Action" i18n:domain="izug">
			<property name="title" i18n:translate="">New Block Entry</property>
			<property name="description" i18n:translate=""/>
			<property name="url_expr">string:./createObject?type_name=Block</property>
			<property name="icon_expr"/>
			<property name="available_expr">python:object.portal_type in here.portal_properties.izug_simplelayout_properties.types_use_simplelayout</property>
			<property name="visible">False</property>
		</object>
		<object name="blog_settings" meta_type="CMF Action" i18n:domain="izug">
			<property name="title" i18n:translate="">Blog Settings</property>
			<property name="description" i18n:translate=""/>
			<property name="url_expr">string:./@@blog-settings</property>
			<property name="icon_expr"/>
			<property name="available_expr"/>
			<property name="permissions">
				<element value="Modify portal content"/>
			</property>
		</object>
	</object>
	<object name="object_blog_settings_actions" meta_type="CMF Action Category">
		<property name="title"/>
		<object name="manage_blog_portlets" meta_type="CMF Action" i18n:domain="izug">
			<property name="title" i18n:translate="">Manage Blog Portlets</property>
			<property name="description" i18n:translate=""/>
			<property name="url_expr">nocall:here/@@blog-settings/managePortletUrl</property>
			<property name="icon_expr"/>
			<property name="available_expr"/>
		</object>
		<object name="edit_blog" meta_type="CMF Action" i18n:domain="izug">
			<property name="title" i18n:translate="">Edit Blog</property>
			<property name="description" i18n:translate=""/>
			<property name="url_expr">nocall:here/@@blog-settings/editBlog</property>
			<property name="icon_expr"/>
			<property name="available_expr"/>
		</object>
		<object name="manage_categories" meta_type="CMF Action" i18n:domain="izug">
			<property name="title" i18n:translate="">Manage categories</property>
			<property name="description" i18n:translate=""/>
			<property name="url_expr">string:./categories</property>
			<property name="icon_expr"/>
			<property name="available_expr"/>
		</object>
	</object>
</object>
